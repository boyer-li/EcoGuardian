<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boyer.dao.UserMapper">
    <insert id="saveUser" parameterType="User">
        insert into user (user_id,user_pwd,user_name,user_sex,user_token)
        values (#{user_id},#{user_pwd},#{user_name},#{user_sex},#{user_token});
    </insert>

    <delete id="deleteUserById" parameterType="String">
        delete from user where user_id = #{user_id};
    </delete>

    <select id="queryUserById" parameterType="String" resultType="User">
        select *from user where user_id = #{user_id};
    </select>

    <select id="queryUsers" resultType="User">
        select *from user;
    </select>

    <update id="updateUser" parameterType="User">
        update user
        set user_sex = #{user_sex},user_name = #{user_name},user_pwd = #{user_pwd},user_token = #{user_token}
        where user_id = #{user_id};
    </update>

    <select id="findByIdAndPwd" parameterType="User" resultType="User">
        select *from user where user_id = #{user_id} and user_pwd = #{user_pwd};
    </select>

</mapper>