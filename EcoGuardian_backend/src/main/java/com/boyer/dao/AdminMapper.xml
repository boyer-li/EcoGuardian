<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boyer.dao.AdminMapper">

    <select id="queryAdminById" parameterType="String" resultType="Admin">
        select *from admin where admin_id = #{admin_id};
    </select>

    <select id="findByIdAndPwd" parameterType="Admin" resultType="Admin">
        select *from admin where admin_id = #{admin_id} and admin_pwd = #{admin_pwd};
    </select>

    <update id="updateAdmin" parameterType="Admin">
        update admin
        set admin_token = #{admin_token}
        where admin_id = #{admin_id};
    </update>


</mapper>